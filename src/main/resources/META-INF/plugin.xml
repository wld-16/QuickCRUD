<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
  <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
  <id>wld.accelerate.QuickCRUD</id>

  <!-- Public plugin name should be written in Title Case.
       Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
  <name>QuickCRUD</name>

  <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
  <vendor email="support@wld.com" url="https://www.wld.com">WLD</vendor>

  <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
       Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
       Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
  <description><![CDATA[
    Enter short description for your plugin here.<br>
    <em>most HTML tags may be used</em>
  ]]></description>

  <!-- Product and plugin compatibility requirements.
       Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
  <depends>com.intellij.modules.platform</depends>

  <!-- Extension points defined by the plugin.
       Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
  <extensions defaultExtensionNs="com.intellij">

  </extensions>

  <actions>
    <action
            id="wld.accelerate.quickcrud.EnumGeneratorAction"
            class="wld.accelerate.quickcrud.EnumGeneratorAction"
            text="Generate Enums"
            description="SDK action example">
      <override-text place="MainMenu" text="Generate Enums"/>
      <add-to-group group-id="ToolsMenu" anchor="first"/>
    </action>
    <action
            id="wld.accelerate.quickcrud.EntityGeneratorAction"
            class="wld.accelerate.quickcrud.EntityGeneratorAction"
            text="Generate Enums"
            description="SDK action example">
      <override-text place="MainMenu" text="Generate Entity Class"/>
      <add-to-group group-id="ToolsMenu" anchor="first"/>
    </action>
    <action
            id="wld.accelerate.quickcrud.VueComponentListAction"
            class="wld.accelerate.quickcrud.VueComponentListAction"
            text="Generate Vue List Components"
            description="SDK action example">
      <override-text place="MainMenu" text="Generate Vue List Component"/>
      <add-to-group group-id="ToolsMenu" anchor="first"/>
    </action>
    <action
            id="wld.accelerate.quickcrud.VueComponentFormAction"
            class="wld.accelerate.quickcrud.VueComponentFormAction"
            text="Generate Vue Form Components"
            description="SDK action example">
      <override-text place="MainMenu" text="Generate Vue Form Component"/>
      <add-to-group group-id="ToolsMenu" anchor="first"/>
    </action>
    <action
            id="wld.accelerate.quickcrud.VueComponentDetailsAction"
            class="wld.accelerate.quickcrud.VueComponentDetailsAction"
            text="Generate Vue Details Components"
            description="SDK action example">
      <override-text place="MainMenu" text="Generate Vue Details Component"/>
      <add-to-group group-id="ToolsMenu" anchor="first"/>
    </action>
    <action
            id="wld.accelerate.quickcrud.VueGeneratorAction"
            class="wld.accelerate.quickcrud.VueGeneratorAction"
            text="Generate All Vue Components"
            description="SDK action example">
      <override-text place="MainMenu" text="Generate All Vue Components"/>
      <add-to-group group-id="ToolsMenu" anchor="first"/>
    </action>
    <action
            id="wld.accelerate.quickcrud.DDLGeneratorAction"
            class="wld.accelerate.quickcrud.DDLGeneratorAction"
            text="Generate SQL"
            description="SDK action example">
      <override-text place="MainMenu" text="Generate DDL"/>
      <add-to-group group-id="ToolsMenu" anchor="first"/>
    </action>
    <action
            id="wld.accelerate.quickcrud.FullApplicationGeneratorAction"
            class="wld.accelerate.quickcrud.FullApplicationGeneratorAction"
            text="Generate Application"
            description="SDK action example">
      <override-text place="MainMenu" text="Generate Full Application"/>
      <add-to-group group-id="ToolsMenu" anchor="first"/>
    </action>
  </actions>
  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="crud-pipeline" secondary="true" icon="AllIcons.Toolwindows.WebToolWindow" factoryClass="wld.accelerate.quickcrud.PipelineToolWindowFactory" anchor="right"></toolWindow>
  </extensions>
</idea-plugin>